	Name: hanging-punctuation
	Value: none | [ first || [ force-end | allow-end ] || last ]
	Initial: none
	Applies to: text
	Inherited: yes
	Canonical order: <abbr title="follows order of property value definition">per grammar</abbr>
	Computed value: specified keyword(s)
